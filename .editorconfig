# EditorConfig is awesome: https://EditorConfig.org


# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4

[*.sh]
indent_style = tab
indent_size = 8

[*.json]
indent_style = space
indent_size = 2

[home/bin/*]
indent_style = tab
indent_size = 8
